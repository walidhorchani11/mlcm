{% extends '::default/index.html.twig' %}
{% block title %}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block content %}

    <div class="wrapper wrapper-content animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>{{ 'media.add_new_media' | trans({}, 'media') }}</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li><a href="#">Config option 1</a>
                            </li>
                            <li><a href="#">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <a href="{{ path('media_index') }}" class="btn btn-primary pull-right">{{ 'media.all_media' | trans({}, 'media') }}</a>
                    </div>
                    <form id="my-awesome-dropzone" class="dropzone" action="{{ path('ajax_media_new') }}" method="post" enctype="multipart/form-data">
                        <div class="dropzone-previews">
                        </div>
                    </form>

                        <div class="m text-right"><small></small> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}

    {% block javascripts %}
        {{ parent () }}
        <!-- DROPZONE -->
        <script src="{{ asset('js/plugins/dropzone/dropzone.js') }}"></script>
        <script src="{{ asset('js/mclmbuilder_scripts/upload-media.js') }}"></script>


    {% endblock %}
