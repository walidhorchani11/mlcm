#popup {
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .5);
    top: 0;
    display: none;
    opacity: 0;
    z-index: 999;
    position: absolute;
}

#contentPopup section .sl-block {
    display: block;
    position: absolute;
    z-index: auto;
}

#popup[data-pop] {
    z-index: 2
}

#popup #boxPopup {
    position: absolute;
    top: 51px;
    box-sizing: border-box;
    z-index: 999;
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 4px;
    left: 50%;
}

#popup [btnclose] {
    position: absolute;
    width: 30px;
    height: 30px;
    top: 10px;
    right: 10px;
    cursor: pointer;
    z-index:20;
}

#popup [btnclose] img {
    max-width: 30px;
    max-height: 30px;
}