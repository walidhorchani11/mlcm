#reference{
    display: none;
    opacity: 0;
    width: 100%;
    height: 100%;
    background: rgba(1,1,1,0.5);
    z-index: 999;
    position: absolute;
    top: 0;
    left: 0;
}

#reference #box {
    word-wrap: break-word;
    background-color: #f5f5f5;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: contain;
    border-radius: 10px;
    width: 600px;
    height: 310px;
    position: absolute;
    z-index: 999;
    padding: 20px;
    right: 10px;
    text-align: left;
    bottom: 75px;
    font-size: 15px;
    top: auto;
}
#reference #scrollerRef{
    height: auto;
    left: 21px;
    margin-top: 20px;
    font: 15px "Montserrat";
    font-weight: normal !important;
    overflow: auto;
}
#reference [btnclose] {
    top: 12px;
    width: 30px;
    text-align: center;
    text-indent: 3000px;
    line-height: 25px;
    height: 30px;
    color: #f5f5f5;
    font-size: 0;
    cursor: pointer;
    position: absolute;
    right: 10px;
}
#reference  #box .title {
    border-bottom: 1px solid;
    padding-bottom: 10px;
    margin-bottom: 10px;
    font: 20px "Montserrat";
}
#reference #box .bottom-arrow {
    background: transparent none repeat scroll 0% 0%;
    position: absolute;
    border-top: 30px solid #f5f5f5;
    border-bottom: 0px solid transparent;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    background-color: transparent;
    border-width: 30px 15px 0px;
    border-style: solid;
    border-color: rgb(245, 245, 245) transparent transparent;
    bottom: -22px;
    right: 105px;
}
#reference [btnclose] img {
    max-height: 30px;
    max-width: 30px;
    position: absolute;
    right: 10px;
}
#scrollerRef ul > li {
    display: inline-flex;
    list-style-type: none;
}
#scrollerRef ul > li > p {
    margin-left: 10px;
}