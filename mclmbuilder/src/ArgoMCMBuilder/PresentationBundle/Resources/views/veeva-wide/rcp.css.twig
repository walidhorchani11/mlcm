#rcp{
    display: none;
    opacity: 0;
    width: 100%;
    height: 100%;
    background: {{ bgColorOverlay|raw }};
    z-index: 999;
    position: absolute;
    top: 0;
    left: 0;
}

#rcp #box{
    word-wrap: break-word;
    background-color: #f5f5f5;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: contain;
    border-radius: 10px;
    width: 600px;
    height: 310px;
    position: absolute;
    z-index: 999;
    padding: 20px;
    right: 5px;
    text-align: left;
    bottom: 90px;
    font-size: 15px;
    top:auto;
}
#rcp #scroller {
    width: 560px;
    height: 100%;
    left: 21px;
    margin-top: 10px;
    font: 15px "Montserrat";
    font-weight: normal !important;
    max-height: 230px;
    overflow: auto;
}

#rcp [btnclose]{
    top: 13px;
    width: 30px;
    text-align: center;
    text-indent: 3000px;
    line-height: 25px;
    height: 30px;
    color: #f5f5f5;
    font-size: 0;
    cursor: pointer;
    position: absolute;
     right: 18px;

}
#rcp #box .title {
    border-bottom: 1px solid;
    padding-bottom: 10px;
    margin-bottom: 10px;
    font: 20px "Montserrat";
}
#rcp #box .bottom-arrow{
    background: transparent none repeat scroll 0% 0%;
    position: absolute;
    border-top: 30px solid #f5f5f5;
    border-bottom: 0px solid transparent;
    border-left: 15px solid transparent;
    border-right: 15px solid transparent;
    background-color: transparent;
    border-width: 30px 15px 0px;
    border-style: solid;
    border-color: rgb(245, 245, 245) transparent transparent;
    bottom: -30px;
    right: 148px;
}
#rcp [btnclose] img{
    max-height: 30px;
    max-width: 30px;
    position: absolute;
    left: 0;
}