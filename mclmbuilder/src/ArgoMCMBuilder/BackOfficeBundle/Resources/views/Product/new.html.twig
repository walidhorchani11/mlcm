{% extends '::default/index.html.twig' %}
{% block title %}{{ 'add.new.product' | trans({}, 'products') }}{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block content %}

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-6">
            <h2>{{ 'add.new.product' | trans({}, 'products') }}</h2>
            <ol class="breadcrumb">
                <li>
                    <strong>{{ 'MCMBuilder' | trans({}, 'presentations') }} </strong>
                </li>
                <li>
                    <strong> {{ 'administration'| trans({}, 'project') }} </strong>
                </li>
                <li>
                    <a href="{{ path('products') }}"><strong>{{ 'products.list' | trans({}, 'products') }} </strong></a>
                </li>
                <li class="active">
                    <strong>{{ 'add.new.product' | trans({}, 'products') }}</strong>
                </li>
            </ol>
        </div>

        <div class="col-sm-4 ed-btn-c">
            <button class="btn btn-primary btn-xs pull-right">
                <a href="{{ path('products') }}"> Retour</a>
            </button>
        </div>
    </div>
    <div class="wrapper wrapper-content">
        <div class="ibox">
            <div class="ibox-content">
                <div class="col-sm-12 pre-space">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}

                    <div>
                        <input type="submit" value="Create" class="btn btn-success pull-right"/>
                    </div>
                </div>
                {{ form_end(form) }}
                <div class="clear-both"></div>
            </div>

        </div>

    </div>
{% endblock content %}