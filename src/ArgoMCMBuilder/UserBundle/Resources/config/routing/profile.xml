<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="fos_user_profile_show" path="/" methods="GET">
        <default key="_controller">UserBundle:Profile:show</default>
    </route>

    <route id="fos_user_profile_edit" path="/edit" methods="GET POST">
        <default key="_controller">UserBundle:Profile:edit</default>
    </route>

    <route id="update_user_picture_to_avatar" path="{id}/edit/picture" methods="GET POST">
        <default key="_controller">UserBundle:User:updateUserPictureToAvatar</default>
    </route>

</routes>
