<div id="reference" {% if overlay is defined and overlay is not empty %}{{ overlay|raw }}{% endif %}>
    <div id="box" {% if boxStyle is defined and boxStyle is not empty %}{{ boxStyle|raw }}{% endif %}>
        <div class="title" {% if titleStyle is defined and titleStyle is not empty %}{{ titleStyle|raw }}{% endif %}>
            {% if title is defined and title is not empty %}{{ title|raw }}{% endif %}
        </div>
        <div id="scrollerRef">
            <div>
                <ul content {% if ulStyle is defined and ulStyle is not empty %}{{ ulStyle|raw }}{% endif %}></ul>
            </div>
        </div>
        <div btnClose>
            {% set src  = '../shared/' ~ shared ~ '/theme/theme1/images/template_btn_close.png' %}{% set class = 'emptydata' %}{% if close is defined and close is not empty %}{% set src = '../shared/'~close %}{% set class = 'fulldata' %}{% endif %}
            <img src="{{ src|raw }}" class="{{ class }}">
        </div>
        <div class="bottom-arrow" {% if arrow is defined and arrow is not empty %}{{ arrow|raw }}{% endif %}></div>
    </div>
</div>