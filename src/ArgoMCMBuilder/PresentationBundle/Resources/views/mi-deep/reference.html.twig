<div id="layer" data-ref {% if layer is defined and layer is not empty %}{{ layer|raw }}{% endif %}>
    <div id="boxReference" {% if styleRef is defined and styleRef is not empty %}{{ styleRef|raw }}{% endif %}>
        <h3 {% if styleTitle is defined and styleTitle is not empty %}{{ styleTitle|raw }}{% endif %}>
            {% if title is defined and title is not empty %}{{ title|raw }}{% endif %}
        </h3>
        <div id="scrollerRef">
            <div>
                <div id="textReference"  {% if styleRefText is defined and styleRefText is not empty %}{{ styleRefText|raw }}{% endif %}>
                </div>
            </div>
        </div>
        <div id="boxReferenceClose">{% set src = 'theme/theme1/images/close_ref.png' %}{% set class = 'emptydata' %}{% if close is defined and close is not empty %}{% set src = close %}{% set class = 'fulldata' %}{% endif %}<img src="{{ src|raw }}" class="{{ class }}">
        </div>
        <span class="arrow-after" {% if arrow is defined and arrow is not empty %}{{ arrow|raw }}{% endif %}></span>
    </div>
</div>